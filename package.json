{
  "name": "musicplayer",
  "productName": "Music Player",
  "author": "Jahsias",
  "license": "ISC",
  "version": "1.0.0",
  "description": "Music player with extra customizations",
  "homepage": "./",
  "main": "./public/electron.js",
  "scripts": {
    "react-start": "react-scripts start",
    "all": "concurrently -k \" npm run react-start\" \"wait-on http://localhost:3000 && electron .\"",
    "package-win": "electron-packager . MusicPlayer --platform=win32 --arch=x64 --out=release-builds",
    "react-build": "react-scripts build",
    "electron-build": "electron-builder",
    "test": "jest --silent",
    "start": "electron-forge start",
    "package": "electron-forge package",
    "make": "electron-forge make"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.23.6",
    "@babel/preset-react": "^7.23.3",
    "@testing-library/react": "^14.1.2",
    "babel-jest": "^29.7.0",
    "concurrently": "^8.2.0",
    "electron-builder": "^24.12.0",
    "jest": "^27.5.1",
    "wait-on": "^7.0.1"
  },
  "jest": {
    "transform": {
      "^.+\\.(js|jsx)$": "babel-jest"
    },
    "testEnvironment": "jsdom",
    "moduleNameMapper": {
      "\\.(css|less|sass|scss)$": "<rootDir>/__mocks__/styleMock.js",
      "\\.(gif|ttf|eot|svg)$": "<rootDir>/__mocks__/fileMock.js"
    }
  },
  "dependencies": {
    "ffmpeg-static": "^5.2.0",
    "fluent-ffmpeg": "^2.1.2",
    "glob": "^10.3.3",
    "music-metadata": "^8.1.4",
    "react-dom": "^18.2.0",
    "spotify-web-api-node": "^5.0.2",
    "tone": "^14.7.77",
    "uuid": "^9.0.1",
    "yt-search": "^2.10.4",
    "ytdl-core": "^4.11.5"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "build": {
    "appId": "com.jahsias.MusicPlayer",
    "files": [
      "dist/**/*",
      "package.json",
      "./public/electron.js",
      "./public/preload.js",
      "./public/index.html",
      "./public/index.css",
      "src/**/*"
    ]
  }
}
